<div class="container mt-4">
  <div class="card">
    <div class="card-header">
      <h2>New Document for <%= @customer.name %></h2>
    </div>

    <div class="card-body">
      <%= form_with(model: [@customer, @document], local: true) do |f| %>
        <% if @document.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@document.errors.count, "error") %> prohibited this document from being saved:</h4>
            <ul>
              <% @document.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, rows: 10, class: 'form-control' %>
          <small class="form-text text-muted">
            Enter the content of your document. You can use plain text or markdown formatting.
          </small>
        </div>

        <div class="mt-4">
          <%= f.submit 'Generate Document', class: 'btn btn-primary' %>
          <%= link_to 'Cancel', customer_path(@customer), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div> 