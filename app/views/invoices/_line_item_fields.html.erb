<div class="row line-item mb-3">
  <div class="col-md-3">
    <%= f.text_field :service, 
        placeholder: 'Service', 
        class: 'form-control',
        required: true %>
  </div>
  
  <div class="col-md-4">
    <%= f.text_field :description, 
        placeholder: 'Description', 
        class: 'form-control' %>
  </div>
  
  <div class="col-md-2">
    <%= f.number_field :quantity, 
        placeholder: 'Qty',
        min: 1,
        value: 1,
        class: 'form-control',
        required: true %>
  </div>
  
  <div class="col-md-2">
    <%= f.number_field :rate, 
        placeholder: 'Rate',
        min: 0,
        step: 0.01,
        class: 'form-control',
        required: true %>
  </div>
  
  <div class="col-md-1">
    <%= button_tag type: 'button',
        class: 'btn btn-danger remove-line-item',
        data: { action: "invoice#removeLineItem" } do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </div>
</div> 